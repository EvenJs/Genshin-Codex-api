generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  passwordHash  String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  gameAccounts  GameAccount[]
  refreshTokens RefreshToken[]
  createdBuilds ArtifactBuild[] @relation("CreatedBuilds")
  savedBuilds   SavedBuild[]    @relation("SavedBuilds")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model GameAccount {
  id        String   @id @default(uuid())
  userId    String
  uid       String
  server    String
  nickname  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  progress   AchievementProgress[]
  artifacts  UserArtifact[]
  characters AccountCharacter[]

  @@unique([userId, uid, server])
  @@index([userId])
}

model AchievementCategory {
  id         String  @id @default(uuid())
  name       String  @unique
  title      String
  sortOrder  Int     @default(0)
  link       String?
  icon       String?
  background String?

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  achievements Achievement[]

  @@index([name])
  @@index([sortOrder])
}

model Achievement {
  id              String   @id
  name            String
  description     String
  categoryId      String
  version         String?
  isHidden        Boolean  @default(false)
  rewardPrimogems Int      @default(0)
  guide           String?
  source          String?

  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  category  AchievementCategory   @relation(fields: [categoryId], references: [id])
  progress  AchievementProgress[]

  @@index([categoryId])
}

model AchievementProgress {
  id            String   @id @default(uuid())
  accountId     String
  achievementId String
  completedAt   DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  account     GameAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([accountId, achievementId])
  @@index([accountId])
  @@index([achievementId])
}

// ==================== 圣遗物系统 ====================

enum ArtifactSlot {
  FLOWER // 生之花
  PLUME // 死之羽
  SANDS // 时之沙
  GOBLET // 空之杯
  CIRCLET // 理之冠
}

model ArtifactSet {
  id             String   @id
  name           String
  rarity         Int[] // 支持的稀有度 [4, 5] 或 [1, 2, 3] 等
  twoPieceBonus  String // 2件套效果
  fourPieceBonus String? // 4件套效果 (部分套装没有)
  imageUrl       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  artifacts          UserArtifact[]
  primarySetBuilds   ArtifactBuild[] @relation("PrimarySet")
  secondarySetBuilds ArtifactBuild[] @relation("SecondarySet")

  @@index([name])
}

model UserArtifact {
  id           String       @id @default(uuid())
  accountId    String
  setId        String
  slot         ArtifactSlot
  mainStat     String // 主属性类型 (HP, ATK, DEF, HP%, ATK%, DEF%, EM, ER%, Crit Rate%, Crit DMG%, Healing%, Elemental DMG%)
  mainStatValue Float       // 主属性数值
  subStats     Json         // 副属性数组 [{stat: string, value: number}]
  level        Int          @default(0) // 0-20
  rarity       Int          // 1-5星
  locked       Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  account          GameAccount       @relation(fields: [accountId], references: [id], onDelete: Cascade)
  set              ArtifactSet       @relation(fields: [setId], references: [id])
  equippedBy       AccountCharacter? @relation(fields: [equippedById], references: [id], onDelete: SetNull)
  equippedById     String?

  @@index([accountId])
  @@index([setId])
  @@index([slot])
  @@index([equippedById])
}

// ==================== 角色系统 ====================

enum Element {
  PYRO // 火
  HYDRO // 水
  ANEMO // 风
  ELECTRO // 雷
  DENDRO // 草
  CRYO // 冰
  GEO // 岩
}

enum WeaponType {
  SWORD // 单手剑
  CLAYMORE // 双手剑
  POLEARM // 长柄武器
  BOW // 弓
  CATALYST // 法器
}

model Character {
  id               String     @id
  name             String
  element          Element
  weaponType       WeaponType?
  rarity           Int? // 4 或 5
  region           String? // 蒙德、璃月、稻妻、须弥、枫丹、纳塔、挪德卡莱
  affiliation      String? // 所属组织
  visionAffiliation String? // 神之眼所属地区
  role             String? // 定位（如：辅助、输出）
  talents          Json? // 天赋详情
  constellations   Json? // 命之座详情
  imageUrl         String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  accountCharacters AccountCharacter[]
  artifactBuilds    ArtifactBuild[]

  @@index([element])
  @@index([weaponType])
  @@index([rarity])
}

model AccountCharacter {
  id            String   @id @default(uuid())
  accountId     String
  characterId   String
  level         Int      @default(1) // 1-90
  constellation Int      @default(0) // 0-6
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  account   GameAccount    @relation(fields: [accountId], references: [id], onDelete: Cascade)
  character Character      @relation(fields: [characterId], references: [id])
  artifacts UserArtifact[]

  @@unique([accountId, characterId])
  @@index([accountId])
  @@index([characterId])
}

// ==================== 推荐系统 ====================

model ArtifactBuild {
  id          String   @id @default(uuid())
  name        String   // Build 名称，如 "绝缘永冻甘雨"
  description String?  // Build 说明
  characterId String   // 适用角色
  creatorId   String   // 创建者
  isPublic    Boolean  @default(false) // 是否公开分享

  // 推荐套装配置
  primarySetId   String  // 主要套装 (4件套)
  secondarySetId String? // 次要套装 (2件套，用于2+2配置)
  useFullSet     Boolean @default(true) // true: 4件套, false: 2+2件套

  // 推荐主属性 (JSON 格式: {SANDS: "ATK%", GOBLET: "Pyro DMG%", CIRCLET: "Crit Rate%"})
  recommendedMainStats Json

  // 推荐副属性优先级 (数组格式: ["Crit Rate%", "Crit DMG%", "ATK%", "EM"])
  subStatPriority Json

  // 评分权重 (用于圣遗物评分算法)
  statWeights Json? // {critRate: 2, critDmg: 1, atk: 0.5, ...}

  notes     String? // 额外说明
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  character    Character     @relation(fields: [characterId], references: [id])
  creator      User          @relation("CreatedBuilds", fields: [creatorId], references: [id], onDelete: Cascade)
  primarySet   ArtifactSet   @relation("PrimarySet", fields: [primarySetId], references: [id])
  secondarySet ArtifactSet?  @relation("SecondarySet", fields: [secondarySetId], references: [id])
  savedBy      SavedBuild[]

  @@index([characterId])
  @@index([creatorId])
  @@index([isPublic])
  @@index([primarySetId])
}

model SavedBuild {
  id        String   @id @default(uuid())
  userId    String   // 保存此 Build 的用户
  buildId   String   // 保存的 Build
  notes     String?  // 用户的备注
  createdAt DateTime @default(now())

  user  User          @relation("SavedBuilds", fields: [userId], references: [id], onDelete: Cascade)
  build ArtifactBuild @relation(fields: [buildId], references: [id], onDelete: Cascade)

  @@unique([userId, buildId]) // 同一用户不能重复保存同一 Build
  @@index([userId])
  @@index([buildId])
}
