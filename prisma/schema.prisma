generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProgressStatus {
  COMPLETED
  NOT_COMPLETED
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  passwordHash String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  gameAccounts GameAccount[]
}

model GameAccount {
  id        String   @id @default(uuid())
  userId    String
  uid       String
  server    String
  nickname  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userAchievements UserAchievement[]
  progress         AchievementProgress[]

  @@unique([userId, uid, server])
  @@index([userId])
}

model Achievement {
  id              String   @id
  name            String
  description     String
  category        String
  region          String
  version         String?
  isHidden        Boolean  @default(false)
  rewardPrimogems Int      @default(0)
  guide           String?

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  userAchievements UserAchievement[]
  progress         AchievementProgress[]

  @@index([category])
  @@index([region])
}

model UserAchievement {
  id            String         @id @default(uuid())
  accountId     String
  achievementId String
  status        ProgressStatus @default(NOT_COMPLETED)
  completedAt   DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  account     GameAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([accountId, achievementId])
  @@index([accountId])
}

model AchievementProgress {
  id            String   @id @default(uuid())
  accountId     String
  achievementId String
  completedAt   DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  account     GameAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([accountId, achievementId])
  @@index([accountId])
  @@index([achievementId])
}
