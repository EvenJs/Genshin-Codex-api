# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/genshin_codex

# JWT secret key - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-super-secret-key-change-in-production

# Server port (optional, defaults to 4000)
PORT=4000

# Frontend origin for CORS (optional, defaults to http://localhost:3000)
FRONTEND_ORIGIN=http://localhost:3000

# Refresh token expiry in days (optional, defaults to 7)
REFRESH_TOKEN_EXPIRY_DAYS=7

# Ollama LLM Configuration
# Host URL for Ollama service (optional, defaults to http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# Default model to use (optional, defaults to llama3.2)
OLLAMA_MODEL=llama3.2

# Rate limit: max requests per minute (optional, defaults to 60)
OLLAMA_RATE_LIMIT=60
